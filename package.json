{
    "name": "Atlas",
    "version": "0.0.0",
    "description": "PeerSay MVP",
    "scripts": {
        "postinstall": "grunt prod",
        "start": "node server.js",

        "predev": "npm install",
        "dev": "set DEV=1 && nodemon --watch app server.js",

        "pretest": "npm install",
        "test": "grunt test",

        "preupdate-webdriver": "npm install",
        "update-webdriver": "node node_modules/protractor/bin/webdriver-manager update",
        "start-webdriver": "node node_modules/protractor/bin/webdriver-manager start",

        "pretest_e2e": "npm run update-webdriver",
        "test_e2e": "grunt test_e2e"
    },
    "engines": {
        "node": "0.10.x"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/PeerSay/Atlas.git"
    },
    "author": "PeerSay team",
    "license": "Private",
    "bugs": {
        "url": "https://github.com/PeerSay/Atlas/issues"
    },
    "dependencies": {
        "express": "~4.9.1",
        "compression": "~1.1.0",
        "body-parser": "~1.9.0",
        "socket.io": "~1.1.0",
        "mongoose": "~3.8.17",
        "path": "~0.4.9",
        "lodash": "~2.4.1",
        "grunt": "~0.4.5",
        "grunt-cli": "~0.1.13",
        "grunt-contrib-clean": "~0.6.0",
        "grunt-contrib-concat": "~0.5.0",
        "grunt-contrib-uglify": "~0.6.0",
        "grunt-contrib-copy": "~0.6.0",
        "grunt-contrib-less": "~0.11.4",
        "grunt-contrib-cssmin": "~0.10.0",
        "grunt-usemin": "~2.4.0",
        "grunt-rev": "~0.1.0",
        "grunt-html-build": "~0.3.2",
        "time-grunt": "~1.0.0",
        "load-grunt-tasks": "~0.6.0"
    },
    "devDependencies": {
        "grunt-contrib-watch": "~0.6.1",
        "connect-livereload": "~0.4.0",
        "grunt-contrib-jshint": "~0.10.0",

        "grunt-mocha-test": "~0.12.0",
        "mocha": "~1.21.4",
        "chai": "~1.9.1",
        "supertest": "~0.14.0",

        "grunt-karma": "~0.9.0",
        "karma": "~0.12.23",
        "karma-mocha": "~0.1.9",
        "karma-chai": "~0.1.0",
        "karma-chrome-launcher": "~0.1.4",
        "karma-phantomjs-launcher": "~0.1.4",

        "protractor": "~1.2.0",
        "grunt-protractor-runner": "~1.1.4"
    }
